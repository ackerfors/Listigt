<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="ListigtTheme" parent="android:Theme.NoTitleBar">
    <item name="android:textSize">18sp</item>
    <item name="android:listViewStyle">@style/MyListView</item>
    <item name="android:textViewStyle">@style/MyTextView</item>
  </style>
  
  <style name="ListigtTheme.Items">
    <item name="android:windowBackground">@color/backgroundItemList</item>
  </style>
  
  <style name="MyListView" parent="@android:style/Widget.ListView">
  	<item name="android:divider">@color/divider</item>
    <item name="android:dividerHeight">1dp</item>
  </style>
  
  <style name="MyTextView">
    <item name="android:paddingTop">5dp</item>
	<item name="android:paddingBottom">5dp</item>
  </style>
  
  <style name="ItemTitleDetails">
  	<item name="android:paddingLeft">4dp</item>
  </style>
  
  <style name="ItemDescDetails">
  	<item name="android:paddingTop">4dp</item>
  </style>
  
  <style name="InfoText">
      <item name="android:textColor">@color/infotext</item>
  </style>
    
  
</resources>
